<Window x:Class="StoryTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoryTracker"
        mc:Ignorable="d"        
        Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}"
        FontSize="{Binding AppFontSize, RelativeSource={RelativeSource Self}}"
        FontFamily="{Binding AppFontFamily, RelativeSource={RelativeSource Self}}"
        Title="Story Tracker" Height="900" Width="1500">
    

    <DockPanel>
        <Menu DockPanel.Dock="Top" HorizontalAlignment="Left">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Settings">
                <MenuItem Header="_Themes">
                    <MenuItem Header="_Light Theme" Click="ThemeMenuItem_Click"/>
                    <MenuItem Header="_Dark Theme" Click="ThemeMenuItem_Click"/>
                    <Separator/>
                    <MenuItem Header="_High Contrast" Click="ThemeMenuItem_Click"/>
                    <MenuItem Header="_Blue/Orange" Click="ThemeMenuItem_Click"/>
                    <Separator/>
                    <MenuItem Header="_Sepia" Click="ThemeMenuItem_Click"/>
                    <MenuItem Header="_Plum" Click="ThemeMenuItem_Click"/>
                    <MenuItem Header="_Evergreen" Click="ThemeMenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="_Font">
                    <MenuItem Header="Font Size">
                        <MenuItem Header="12" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="14" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="16" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="18" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="22" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="28" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="36" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="48" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="72" Click="FontSizeMenuItem_Click"/>
                    </MenuItem>
                    <MenuItem Header="Font Family">
                        <MenuItem Header="Segoe UI" Click="FontFamilyMenuItem_Click"/>
                        <MenuItem Header="Arial" Click="FontFamilyMenuItem_Click"/>
                        <MenuItem Header="Times New Roman" Click="FontFamilyMenuItem_Click"/>
                        <MenuItem Header="Courier New" Click="FontFamilyMenuItem_Click"/>
                        <MenuItem Header="Georgia" Click="FontFamilyMenuItem_Click"/>
                        <MenuItem Header="Century Gothic" Click="FontFamilyMenuItem_Click"/>
                    </MenuItem>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" 
           Background="{DynamicResource BackgroundColor}" 
           Foreground="{DynamicResource ForegroundColor}">
            <StatusBarItem>
                <TextBlock Name="AppStatusTextBlock" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Column 0 for the stories list -->
                <ColumnDefinition Width="220" MinWidth="150"/>
                <ColumnDefinition Width="Auto"/>
                <!-- Column 1 for the chapters list -->
                <ColumnDefinition Width="220" MinWidth="150"/>
                <ColumnDefinition Width="Auto"/>
                <!-- Column 2 for the details and editor -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ===================================== -->
            <!--           COLUMN 0: STORIES           -->
            <!-- ===================================== -->
            <DockPanel Grid.Column="0" Margin="5">
                <TextBox Name="SearchTextBox" 
                 DockPanel.Dock="Top" 
                 Margin="0,0,0,5"
                 TextChanged="SearchTextBox_TextChanged"
                 GotFocus="SearchTextBox_GotFocus"
                 LostFocus="SearchTextBox_LostFocus"/>
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="AddStoryButton" Margin="5" Padding="5" Click="AddStoryButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE710;" VerticalAlignment="Center"/>
                            <TextBlock Text="Add Story" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Name="DeleteStoryButton" Margin="5" Padding="5" Click="DeleteStoryButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE74D;" VerticalAlignment="Center"/>
                            <TextBlock Text="Delete" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <ListBox Name="StoryListBox"
                 SelectionChanged="StoryListBox_SelectionChanged"
                 DisplayMemberPath="Title"/>
            </DockPanel>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="{DynamicResource BorderColor}"/>

            <!-- ===================================== -->
            <!--          COLUMN 1: CHAPTERS           -->
            <!-- ===================================== -->
            <DockPanel Grid.Column="2" Margin="5">
                <TextBlock DockPanel.Dock="Top" Text="Chapters" FontWeight="Bold" Margin="5,0"/>
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="AddChapterButton" Margin="5" Padding="5" Click="AddChapterButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE710;" VerticalAlignment="Center"/>
                            <TextBlock Text="Add Chapter" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Name="DeleteChapterButton" Margin="5" Padding="5" Click="DeleteChapterButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE74D;" VerticalAlignment="Center"/>
                            <TextBlock Text="Delete" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <ListBox Name="ChapterListBox" 
                 SelectionChanged="ChapterListBox_SelectionChanged"
                 DisplayMemberPath="Title"/>
            </DockPanel>

            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" Background="{DynamicResource BorderColor}"/>

            <!-- ===================================== -->
            <!--      COLUMN 2: DETAILS & EDITOR       -->
            <!-- ===================================== -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Row for Story Properties -->
                    <RowDefinition Height="*"/>
                    <!-- Row for Chapter Editor -->
                </Grid.RowDefinitions>

                <!-- Story Properties GroupBox -->
                <GroupBox Grid.Row="0" Header="Story Properties" Margin="5" Padding="5">
                    <StackPanel>
                        <TextBlock Text="Title:" FontWeight="Bold"/>
                        <TextBox Name="StoryTitleTextBox"/>
                        <TextBlock Text="Story Type:" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBox Name="StoryTypeTextBox"/>
                        <TextBlock Text="Genre:" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBox Name="GenreTextBox"/>
                        <TextBlock Text="Status:" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBox Name="StoryStatusTextBox"/>
                        <Button Name="SaveStoryDetailsButton" Content="Save Story Details" Margin="0,10,0,0" Click="SaveStoryDetailsButton_Click"/>
                    </StackPanel>
                </GroupBox>

                <!-- Chapter Editor GroupBox -->
                <GroupBox Grid.Row="1" Header="Chapter Editor" Margin="5" Padding="5">
                    <DockPanel>
                        <Button Name="SaveChapterButton" DockPanel.Dock="Bottom" Content="Save Chapter" Margin="0,5,0,0" Padding="5" Click="SaveChapterButton_Click"/>

                        <StackPanel DockPanel.Dock="Top">

                            <TextBlock Text="Chapter Title:" FontWeight="Bold"/>
                            <TextBox Name="ChapterTitleTextBox" Margin="0,5,0,5"/>

                            <ToolBarTray>
                                <ToolBar>
                                    <Button Command="EditingCommands.ToggleBold" ToolTip="Bold (Ctrl+B)">
                                        <TextBlock FontWeight="Bold" FontSize="14">B</TextBlock>
                                    </Button>
                                    <Button Command="EditingCommands.ToggleItalic" ToolTip="Italic (Ctrl+I)">
                                        <TextBlock FontStyle="Italic" FontSize="14">I</TextBlock>
                                    </Button>
                                    <Button Command="EditingCommands.ToggleUnderline" ToolTip="Underline (Ctrl+U)">
                                        <TextBlock TextDecorations="Underline" FontSize="14">U</TextBlock>
                                    </Button>
                                    <Separator/>

                                    <ComboBox Name="FontFamilyComboBox" Width="120" ToolTip="Font Family" SelectionChanged="FontFamilyComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Arial"/>
                                        <ComboBoxItem Content="Calibri"/>
                                        <ComboBoxItem Content="Cambria"/>
                                        <ComboBoxItem Content="Century Gothic"/>
                                        <ComboBoxItem Content="Courier New"/>
                                        <ComboBoxItem Content="Georgia"/>
                                        <ComboBoxItem Content="Segoe UI"/>
                                        <ComboBoxItem Content="Times New Roman"/>
                                        <ComboBoxItem Content="Verdana"/>
                                    </ComboBox>

                                    <ComboBox Name="FontSizeComboBox" Width="50" ToolTip="Font Size" IsEditable="True" TextBoxBase.TextChanged="FontSizeComboBox_TextChanged">
                                        <ComboBoxItem Content="8"/>
                                        <ComboBoxItem Content="9"/>
                                        <ComboBoxItem Content="10"/>
                                        <ComboBoxItem Content="11"/>
                                        <ComboBoxItem Content="12"/>
                                        <ComboBoxItem Content="14"/>
                                        <ComboBoxItem Content="16"/>
                                        <ComboBoxItem Content="18"/>
                                        <ComboBoxItem Content="20"/>
                                        <ComboBoxItem Content="24"/>
                                        <ComboBoxItem Content="36"/>
                                        <ComboBoxItem Content="48"/>
                                        <ComboBoxItem Content="72"/>
                                    </ComboBox>
                                    <Separator/>

                                    <!-- This ComboBox will be our color picker -->
                                    <ComboBox Name="TextColorComboBox" Width="40" ToolTip="Text Color" SelectionChanged="TextColorComboBox_SelectionChanged" SelectedValuePath="Name">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                
                                                <!-- This template displays a colored rectangle for each item -->
                                                <Rectangle Fill="{Binding Name}" Width="20" Height="20" Margin="2"/>
                                            </DataTemplate>
                                            
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </ToolBar>
                            </ToolBarTray>
                        </StackPanel>

                        <Grid DockPanel.Dock="Bottom" Margin="0,5,0,0">
                            <TextBlock Name="LiveCharCountTextBlock" Text="Characters: 0" HorizontalAlignment="Left"/>
                            <TextBlock Name="LiveWordCountTextBlock" Text="Word Count: 0" HorizontalAlignment="Right"/>
                        </Grid>

                        <RichTextBox Name="StoryRichTextBox" 
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto" 
                     TextChanged="StoryRichTextBox_TextChanged"
                     BorderThickness="1"/>
                    </DockPanel>
                </GroupBox>
            </Grid>
        </Grid>
    </DockPanel>
</Window>