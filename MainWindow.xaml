<Window x:Class="StoryTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoryTracker"
        mc:Ignorable="d"        
        Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}"
        FontSize="{Binding AppFontSize, RelativeSource={RelativeSource Self}}"
        FontFamily="{Binding AppFontFamily, RelativeSource={RelativeSource Self}}"
        Title="Story Tracker" Height="900" Width="1500">
    

    <DockPanel>
        <Menu DockPanel.Dock="Top" HorizontalAlignment="Left">
            <MenuItem Header="_File">
                <MenuItem Header="Export Chapter As">
                    <MenuItem Header="Plain Text (.txt)..." Click="ExportTxtMenuItem_Click"/>
                    <MenuItem Header="Rich Text Format (.rtf)..." Click="ExportRtfMenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="Print Preview..." Click="PrintPreviewMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="_Exit" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Spell Check"
                  IsCheckable="True"
                  IsChecked="{Binding ElementName=StoryRichTextBox, Path=(SpellCheck.IsEnabled)}"/>
            </MenuItem>
            <MenuItem Header="_Settings">
                <MenuItem Header="_Themes">
                    <MenuItem Header="_Light Theme" Click="ThemeMenuItem_Click"/>
                    <MenuItem Header="_Dark Theme" Click="ThemeMenuItem_Click"/>
                    <Separator/>
                    <MenuItem Header="_High Contrast" Click="ThemeMenuItem_Click"/>
                    <MenuItem Header="_Blue/Orange" Click="ThemeMenuItem_Click"/>
                    <Separator/>
                    <MenuItem Header="_Sepia" Click="ThemeMenuItem_Click"/>
                    <MenuItem Header="_Plum" Click="ThemeMenuItem_Click"/>
                    <MenuItem Header="_Evergreen" Click="ThemeMenuItem_Click"/>
                    <Separator/>
                    <MenuItem Header="_Aero" Click="ThemeMenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="_Font">
                    <MenuItem Header="Font Size">
                        <MenuItem Header="12" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="14" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="16" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="18" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="22" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="28" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="36" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="48" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="72" Click="FontSizeMenuItem_Click"/>
                    </MenuItem>
                    <MenuItem Header="Font Family">
                        <MenuItem Header="Segoe UI" Click="FontFamilyMenuItem_Click"/>
                        <MenuItem Header="Arial" Click="FontFamilyMenuItem_Click"/>
                        <MenuItem Header="Times New Roman" Click="FontFamilyMenuItem_Click"/>
                        <MenuItem Header="Courier New" Click="FontFamilyMenuItem_Click"/>
                        <MenuItem Header="Georgia" Click="FontFamilyMenuItem_Click"/>
                        <MenuItem Header="Century Gothic" Click="FontFamilyMenuItem_Click"/>
                    </MenuItem>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" 
           Background="{DynamicResource BackgroundColor}" 
           Foreground="{DynamicResource ForegroundColor}">
            <StatusBarItem>
                <TextBlock Name="AppStatusTextBlock" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Column 0 for the stories list -->
                <ColumnDefinition Width="220" MinWidth="350"/>
                <ColumnDefinition Width="Auto"/>
                <!-- Column 1 for the chapters list -->
                <ColumnDefinition Width="220" MinWidth="150"/>
                <ColumnDefinition Width="Auto"/>
                <!-- Column 2 for the details and editor -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ===================================== -->
            <!--           COLUMN 0: STORIES           -->
            <!-- ===================================== -->
            <DockPanel Grid.Column="0" Margin="5">
                <TextBox Name="SearchTextBox" DockPanel.Dock="Top" Margin="0,0,0,5" TextChanged="SearchTextBox_TextChanged" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="AddStoryButton" Margin="5" Padding="5" Click="AddStoryButton_Click" Width="109" Height="30">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE710;" VerticalAlignment="Center"/>
                            <TextBlock Text="Add Story" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="DeleteStoryButton" Padding="5" Click="DeleteStoryButton_Click" Width="75" Height="30">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE74D;" VerticalAlignment="Center"/>
                            <TextBlock Text="Delete" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <ListBox Name="StoryListBox"
                 SelectionChanged="StoryListBox_SelectionChanged"
                 DisplayMemberPath="Title"/>
            </DockPanel>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="{DynamicResource BorderColor}"/>

            <!-- ===================================== -->
            <!--          COLUMN 1: CHAPTERS           -->
            <!-- ===================================== -->
            <DockPanel Grid.Column="2" Margin="5" >
                <TextBlock DockPanel.Dock="Top" Text="Chapters" FontWeight="Bold" Margin="5,0"/>
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="AddChapterButton" Margin="5" Padding="5" Click="AddChapterButton_Click" Width="109">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE710;" VerticalAlignment="Center"/>
                            <TextBlock Text="Add Chapter" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Name="DeleteChapterButton" Margin="5" Padding="5" Click="DeleteChapterButton_Click" Width="75" Height="30">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE74D;" VerticalAlignment="Center"/>
                            <TextBlock Text="Delete" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <ListBox Name="ChapterListBox" 
             SelectionChanged="ChapterListBox_SelectionChanged"
             DisplayMemberPath="Title"/>
            </DockPanel>

            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" Background="{DynamicResource BorderColor}"/>

            <!-- ===================================== -->
            <!--      COLUMN 2: DETAILS & EDITOR       -->
            <!-- ===================================== -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Row for Story Properties -->
                    <RowDefinition Height="*"/>
                    <!-- Row for Chapter Editor -->
                </Grid.RowDefinitions>

                <!-- Story Properties GroupBox -->
                <GroupBox Grid.Row="0" Header="Story Properties" Margin="50,15,50,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Title:" FontWeight="Bold"/>
                        <TextBox Name="StoryTitleTextBox" Tag="Enter story title..." GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                        <TextBlock Text="Story Type:" FontWeight="Bold" Margin="0,10,0,0"/>
                        <TextBox Name="StoryTypeTextBox" Tag="e.g., Fiction, Non-Fiction" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                        <TextBlock Text="Genre:" FontWeight="Bold" Margin="0,10,0,0"/>
                        <TextBox Name="GenreTextBox" Tag="e.g., Fantasy, Sci-Fi" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                        <TextBlock Text="Status:" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBox Name="StoryStatusTextBox" Tag="e.g., Drafting, Complete" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                        <Button Name="SaveStoryDetailsButton" Content="Save Story Details" Margin="0,10,0,0" Click="SaveStoryDetailsButton_Click"/>
                    </StackPanel>
                </GroupBox>
                <Separator/>

                <!-- Chapter Editor GroupBox -->
                <GroupBox Grid.Row="1" Header="Chapter Editor" Margin="15" Padding="5">
                    <DockPanel>
                        <Button Name="SaveChapterButton" DockPanel.Dock="Bottom" Content="Save Chapter" Margin="0,5,0,0" Padding="5" Click="SaveChapterButton_Click"/>

                        <StackPanel DockPanel.Dock="Top">

                            <TextBlock Text="Chapter Title:" FontWeight="Bold"/>
                            <TextBox Name="ChapterTitleTextBox" Tag="Enter chapter title..." GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Margin="0,5,0,10"/>

                            <ToolBarTray DockPanel.Dock="Top" Background="{DynamicResource ToolBarBackgroundColor}" Margin="0,10,0,10">
                                <ToolBar Background="{DynamicResource ToolBarButtonAreaBackgroundColor}" Margin="0,2,0,2">

                                    <Button Command="ApplicationCommands.Cut" ToolTip="Cut (Ctrl+X)" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/cut.png"/>
                                    <Button Command="ApplicationCommands.Copy" ToolTip="Copy (Ctrl+C)" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/copy.png"/>
                                    <Button Command="ApplicationCommands.Paste" ToolTip="Paste (Ctrl+V)" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/paste.png"/>
                                    <Button Command="ApplicationCommands.SelectAll" ToolTip="Select All (Ctrl+A)" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/select-all.png"/>
                                    <Separator/>
                                    <Button Command="ApplicationCommands.Undo" ToolTip="Undo (Ctrl+Z)" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/undo.png"/>
                                    <Button Command="ApplicationCommands.Redo" ToolTip="Redo (Ctrl+Y)" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/redo.png"/>
                                    <Separator/>

                                    <Button Command="EditingCommands.ToggleBold" ToolTip="Bold (Ctrl+B)" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/bold.png"/>
                                    <Button Command="EditingCommands.ToggleItalic" ToolTip="Italic (Ctrl+I)" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/italic.png"/>
                                    <Button Command="EditingCommands.ToggleUnderline" ToolTip="Underline (Ctrl+U)" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/underline.png"/>
                                    <Button Click="StrikethroughButton_Click" ToolTip="Strikethrough" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/strikethrough.png"/>
                                    <Button Command="EditingCommands.ToggleSubscript" ToolTip="Subscript" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/subscript.png"/>
                                    <Button Command="EditingCommands.ToggleSuperscript" ToolTip="Superscript" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/superscript.png"/>
                                    <Separator/>

                                    <ComboBox Name="FontFamilyComboBox" Width="120" ToolTip="Font Family" SelectionChanged="FontFamilyComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Arial"/>
                                        <ComboBoxItem Content="Calibri"/>
                                        <ComboBoxItem Content="Cambria"/>
                                        <ComboBoxItem Content="Century Gothic"/>
                                        <ComboBoxItem Content="Courier New"/>
                                        <ComboBoxItem Content="Georgia"/>
                                        <ComboBoxItem Content="Segoe UI"/>
                                        <ComboBoxItem Content="Times New Roman"/>
                                        <ComboBoxItem Content="Verdana"/>
                                    </ComboBox>
                                    <ComboBox Name="FontSizeComboBox" Width="50" ToolTip="Font Size" IsEditable="True" TextBoxBase.TextChanged="FontSizeComboBox_TextChanged">
                                        <ComboBoxItem Content="8"/>
                                        <ComboBoxItem Content="9"/>
                                        <ComboBoxItem Content="10"/>
                                        <ComboBoxItem Content="11"/>
                                        <ComboBoxItem Content="12"/>
                                        <ComboBoxItem Content="14"/>
                                        <ComboBoxItem Content="16"/>
                                        <ComboBoxItem Content="18"/>
                                        <ComboBoxItem Content="20"/>
                                        <ComboBoxItem Content="24"/>
                                        <ComboBoxItem Content="36"/>
                                        <ComboBoxItem Content="48"/>
                                        <ComboBoxItem Content="72"/>
                                    </ComboBox>
                                    <ComboBox Name="TextColorComboBox" Width="40" ToolTip="Text Color" SelectionChanged="TextColorComboBox_SelectionChanged" SelectedValuePath="Name">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <Rectangle Fill="{Binding Name}" Width="20" Height="20" Margin="2"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <Separator/>

                                    <Button Command="EditingCommands.AlignLeft" ToolTip="Align Left" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/align-left.png"/>
                                    <Button Command="EditingCommands.AlignCenter" ToolTip="Align Center" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/align-center.png"/>
                                    <Button Command="EditingCommands.AlignRight" ToolTip="Align Right" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/align-right.png"/>
                                    <Button Command="EditingCommands.AlignJustify" ToolTip="Align Justify" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/align-justify.png"/>
                                    <Separator/>
                                    <Button Command="EditingCommands.ToggleBullets" ToolTip="Bulleted List" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/list-bullets.png"/>
                                    <Button Command="EditingCommands.ToggleNumbering" ToolTip="Numbered List" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/list-numbers.png"/>
                                    <Separator/>
                                    <Button Command="EditingCommands.IncreaseIndentation" ToolTip="Increase Indent" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/indent-increase.png"/>
                                    <Button Command="EditingCommands.DecreaseIndentation" ToolTip="Decrease Indent" Style="{DynamicResource ToolBarImageButtonStyle}" Tag="/Images/indent-decrease.png"/>
                                    
                                    <Separator/>
                                    
                                </ToolBar>
                            </ToolBarTray>
                        </StackPanel>

                        <Grid DockPanel.Dock="Bottom" Margin="0,5,0,0">
                            <TextBlock Name="SpellingErrorsTextBlock" Text="Spelling Errors: 0" Grid.Column="0" HorizontalAlignment="Left"/>

                            <TextBlock Name="LiveCharCountTextBlock" Text="Characters: 0" Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,0,0"/>
                            <TextBlock Name="LiveWordCountTextBlock" Text="Word Count: 0" Grid.Column="2" HorizontalAlignment="Right"/>
                        </Grid>

                        <RichTextBox Name="StoryRichTextBox" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto" 
                         TextChanged="StoryRichTextBox_TextChanged"
                         BorderThickness="1"
                         SpellCheck.IsEnabled="True"
                         ContextMenuOpening="StoryRichTextBox_ContextMenuOpening">
                            <RichTextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Command="ApplicationCommands.Cut"/>
                                    <MenuItem Command="ApplicationCommands.Copy"/>
                                    <MenuItem Command="ApplicationCommands.Paste"/>
                                    <Separator/>
                                    <MenuItem Name="AddToDictionaryMenuItem" Header="Add to Dictionary" Click="AddToDictionaryMenuItem_Click"/>
                                </ContextMenu>
                            </RichTextBox.ContextMenu>
                        </RichTextBox>
                    </DockPanel>
                </GroupBox>
            </Grid>
        </Grid>
    </DockPanel>
</Window>