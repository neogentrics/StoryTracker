<Window x:Class="StoryTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoryTracker"
        mc:Ignorable="d"        
        Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource ForegroundColor}"
        FontSize="{Binding AppFontSize, RelativeSource={RelativeSource Self}}"
        FontFamily="{Binding AppFontFamily, RelativeSource={RelativeSource Self}}"
        Title="Story Tracker" Height="900" Width="1500">
    

    <DockPanel>
        <Menu DockPanel.Dock="Top" HorizontalAlignment="Left">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Settings">
                <MenuItem Header="_Themes">
                    <MenuItem Header="_Light Theme" Click="ThemeMenuItem_Click"/>
                    <MenuItem Header="_Dark Theme" Click="ThemeMenuItem_Click"/>
                    <Separator/>
                    <MenuItem Header="_High Contrast" Click="ThemeMenuItem_Click"/>
                    <MenuItem Header="_Blue/Orange" Click="ThemeMenuItem_Click"/>
                    <Separator/>
                    <MenuItem Header="_Sepia" Click="ThemeMenuItem_Click"/>
                    <MenuItem Header="_Plum" Click="ThemeMenuItem_Click"/>
                    <MenuItem Header="_Evergreen" Click="ThemeMenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="_Font">
                    <MenuItem Header="Font Size">
                        <MenuItem Header="12" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="14" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="16" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="18" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="22" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="28" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="36" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="48" Click="FontSizeMenuItem_Click"/>
                        <MenuItem Header="72" Click="FontSizeMenuItem_Click"/>
                    </MenuItem>
                    <MenuItem Header="Font Family">
                        <MenuItem Header="Segoe UI" Click="FontFamilyMenuItem_Click"/>
                        <MenuItem Header="Arial" Click="FontFamilyMenuItem_Click"/>
                        <MenuItem Header="Times New Roman" Click="FontFamilyMenuItem_Click"/>
                        <MenuItem Header="Courier New" Click="FontFamilyMenuItem_Click"/>
                        <MenuItem Header="Georgia" Click="FontFamilyMenuItem_Click"/>
                        <MenuItem Header="Century Gothic" Click="FontFamilyMenuItem_Click"/>
                    </MenuItem>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" 
           Background="{DynamicResource BackgroundColor}" 
           Foreground="{DynamicResource ForegroundColor}">
            <StatusBarItem>
                <TextBlock Name="AppStatusTextBlock" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" MinWidth="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Column="0" Margin="5">

                <TextBox Name="SearchTextBox" 
                         DockPanel.Dock="Top" 
                         Margin="0,0,0,5"
                         TextChanged="SearchTextBox_TextChanged"
                         GotFocus="SearchTextBox_GotFocus"
                         LostFocus="SearchTextBox_LostFocus"/>

                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="AddButton" Margin="5" Padding="5" Click="AddButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE710;" VerticalAlignment="Center"/>
                            <TextBlock Text="Add New" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Name="DeleteButton" Margin="5" Padding="5" Click="DeleteButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE74D;" VerticalAlignment="Center"/>
                            <TextBlock Text="Delete" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <ListBox Name="StoryListBox"
                         SelectionChanged="StoryListBox_SelectionChanged"
                         DisplayMemberPath="Title"/>
                
            </DockPanel>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>

            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <TextBlock Text="Title:" FontWeight="Bold"/>
                    <TextBox Name="TitleTextBox"/>

                    <TextBlock Text="Story Type:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox Name="StoryTypeTextBox"/>

                    <TextBlock Text="Genre:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox Name="GenreTextBox"/>

                    <TextBlock Text="Status:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox Name="StoryStatusTextBox"/>

                    <TextBlock Text="Word Count:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock Name="WordCountTextBlock" Text="--"/>

                    <TextBlock Text="Story Text:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <Menu Margin="0,10,0,15"
                              HorizontalAlignment="Left"
                              Background="{DynamicResource ButtonBackgroundColor}"
                              Foreground="{DynamicResource ForegroundColor}">
                        <MenuItem Header="_Editor Font Size">
                            <MenuItem Header="8" Click="EditorFontSizeMenuItem_Click"/>
                            <MenuItem Header="9" Click="EditorFontSizeMenuItem_Click"/>
                            <MenuItem Header="10" Click="EditorFontSizeMenuItem_Click"/>
                            <MenuItem Header="11" Click="EditorFontSizeMenuItem_Click"/>
                            <MenuItem Header="12" Click="EditorFontSizeMenuItem_Click"/>
                            <MenuItem Header="14" Click="EditorFontSizeMenuItem_Click"/>
                            <MenuItem Header="16" Click="EditorFontSizeMenuItem_Click"/>
                            <MenuItem Header="18" Click="EditorFontSizeMenuItem_Click"/>
                            <MenuItem Header="20" Click="EditorFontSizeMenuItem_Click"/>
                            <MenuItem Header="24" Click="EditorFontSizeMenuItem_Click"/>
                            <MenuItem Header="28" Click="EditorFontSizeMenuItem_Click"/>
                            <MenuItem Header="36" Click="EditorFontSizeMenuItem_Click"/>
                            <MenuItem Header="48" Click="EditorFontSizeMenuItem_Click"/>
                            <MenuItem Header="72" Click="EditorFontSizeMenuItem_Click"/>
                        </MenuItem>
                        <MenuItem Header="_Editor Font Family">
                            <MenuItem Header="Arial" Click="EditorFontFamilyMenuItem_Click"/>
                            <MenuItem Header="Calibri" Click="EditorFontFamilyMenuItem_Click"/>
                            <MenuItem Header="Cambria" Click="EditorFontFamilyMenuItem_Click"/>
                            <MenuItem Header="Century Gothic" Click="EditorFontFamilyMenuItem_Click"/>
                            <MenuItem Header="Courier New" Click="EditorFontFamilyMenuItem_Click"/>
                            <MenuItem Header="Georgia" Click="EditorFontFamilyMenuItem_Click"/>
                            <MenuItem Header="Segoe UI" Click="EditorFontFamilyMenuItem_Click"/>
                            <MenuItem Header="Times New Roman" Click="EditorFontFamilyMenuItem_Click"/>
                            <MenuItem Header="Verdana" Click="EditorFontFamilyMenuItem_Click"/>
                        </MenuItem>
                        <MenuItem Header="_Text Color">
                            <MenuItem Header="Black" Tag="Black" Foreground="Black" Click="EditorTextColorMenuItem_Click"/>
                            <MenuItem Header="White" Tag="White" Foreground="White" Click="EditorTextColorMenuItem_Click"/>
                            <MenuItem Header="Red" Tag="Red" Foreground="Red" Click="EditorTextColorMenuItem_Click"/>
                            <MenuItem Header="Blue" Tag="Blue" Foreground="Blue" Click="EditorTextColorMenuItem_Click"/>
                            <MenuItem Header="Green" Tag="Green" Foreground="Green" Click="EditorTextColorMenuItem_Click"/>
                        </MenuItem>
                    </Menu>
                    <TextBox Name="StoryTextBox" Height="300" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                    <Button Name="SaveButton" Content="Save Changes" Margin="0,10,0,0" Click="SaveButton_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>