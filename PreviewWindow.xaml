<Window x:Class="StoryTracker.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Print Preview" Height="800" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
            <TextBlock Name="ChapterTitleLabel" FontSize="16" FontWeight="Bold"/>
            <Button Content="Print" Click="PrintButton_Click" Margin="20,0,0,0"/>
        </StackPanel>
        <FlowDocumentScrollViewer Name="PreviewViewer"/>
    </DockPanel>
</Window>