<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StoryTracker.MAUI.LoginPage"
             Title="Login">
    <VerticalStackLayout Spacing="10" Padding="20" VerticalOptions="Center">
        <Label Text="Saved Connections:"/>
        <Picker x:Name="SavedConnectionsPicker" Title="Select a connection" SelectionChanged="OnPickerSelectionChanged"/>
        <Entry x:Name="HostEntry" Placeholder="Host / IP Address"/>
        <Entry x:Name="DatabaseEntry" Placeholder="Database"/>
        <Entry x:Name="UserEntry" Placeholder="User"/>
        <Entry x:Name="PasswordEntry" IsPassword="True"/>
        <Button x:Name="ConnectButton" Text="Connect" Clicked="OnConnectClicked"/>
        <Button x:Name="SaveButton" Text="Save Connection" Clicked="OnSaveClicked"/>
        <Button x:Name="DeleteButton" Text="Delete Connection" Clicked="OnDeleteClicked"/>
    </VerticalStackLayout>
</ContentPage>